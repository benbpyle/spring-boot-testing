<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd"
        logicalFilePath="02-bag-create.xml">

    <changeSet id="01" author="Ben Pyle">
        <createTable tableName="bags">
            <column autoIncrement="false" name="id" type="BIGSERIAL">
                <constraints primaryKey="true" primaryKeyName="bag_id_PK"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
            <column name="updated_datetime" type="TIMESTAMP(29) WITHOUT TIME ZONE"/>
            <column name="created_datetime" type="TIMESTAMP(29) WITHOUT TIME ZONE"/>
        </createTable>
    </changeSet>
    <changeSet id="02" author="Ben Pyle">
        <addColumn tableName="clubs">
            <column name="bag_id" type="BIGSERIAL" />
        </addColumn>
    </changeSet>
    <changeSet id="03" author="Ben Pyle">
        <addForeignKeyConstraint baseTableName="clubs"
                                 baseColumnNames="bag_id"
                                 constraintName="club_bag_id"
                                 referencedTableName="bags"
                                 referencedColumnNames="id" />
    </changeSet>
</databaseChangeLog>